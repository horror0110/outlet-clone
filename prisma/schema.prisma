// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid()) @map("_id")
  surname  String
  name     String?
  email    String? @unique
  password String?
}

model Category {
  id    String  @id @default(cuid()) @map("_id")
  title String?
  slug  String
}

model Product {
  id          String   @id @default(cuid()) @map("_id")
  category    String?
  savings     Int?
  star        Int?
  color       String[]
  price       Int?
  salePrice   Int?
  balance     Boolean?
  title       String?
  description String?
  images      String[]
  cartId      String?
}

model Cart {
  id          String   @id @default(cuid()) @map("_id")
  category    String
  savings     Int
  star        Int
  color       String[]
  price       Int
  quantity    Int?
  salePrice   Int
  balance     Boolean
  title       String
  description String
  images      String[]
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Checkout {
  id String @id @default(cuid()) @map("_id")
  email String
  totalPrice Int
  title      String
  quantity   Int
  price      Int
  productPrice Int
  image String
}
