// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid()) @map("_id")
  surname  String
  name     String?
  email    String? @unique
  password String?
}

model Category {
  id    String  @id @default(cuid()) @map("_id")
  title String?
  slug  String
}

model Product {
  id          String   @id @default(cuid()) @map("_id")
  category    String?
  savings     Int?
  star        Int?
  color       String[]
  price       Int?
  salePrice   Int?
  balance     Boolean?
  title       String?
  description String?
  images      String[]
}
